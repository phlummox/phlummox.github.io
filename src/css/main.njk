h1, h2{
  font-family: inherit;
  font-weight: 400;
  line-height: 1.1;
  color: inherit;
}

h3, h4, h5, h6 {
  font-family: inherit;
  font-weight: 500;
  line-height: 1.1;
  color: inherit;
}

h4, h5, h6 {
  margin-top: 10px;
  margin-bottom: 10px;
}

h1 {
  font-size: 1.4em;
}

h2 {
    font-size: 1.2em;
}

h3 {
    font-size: 1em;
}

h4 {
  font-size: 18px;
}

h5 {
  font-size: 16px;
}

code, kbd, pre, samp {
  font-family: Menlo,Monaco,Consolas,"Courier New",monospace;
  font-size: 1em;
}

/* an article or blog posts's tags.
 * (will usually be a `kbd` or similar.
 */
.item-tag {
  background-color: var(--accent);
}

/* pre on small-width screens */
@media (max-width: 767px) {
  pre {
    overflow: scroll;
  }
}

/* Inline code */
:not(pre) code {
  padding: 2px 4px;
  font-size: 90%;
  word-break: break-all !important;
  color: #c7254e;
  background-color: #f9f2f4;
  border-radius: 4px;
}

/* Blocks of code */
pre code {
  padding: 0;
  font-size: inherit;
  color: inherit;
  hyphens: none;
  background-color: transparent;
  border-radius: 0;
}

/* force something to be pre-wrap but breakable */
.wrappable {
  white-space: pre-wrap !important;
  word-break: break-all !important;
}

kbd {
  padding: 2px 4px;
  font-size: 90%;
  color: white;
  border-radius: 3px;
  box-shadow: inset 0 -1px 0 rgba(0,0,0,.25);
}

.text-left {
  text-align: left;
}

sup {
  top: -0.5em;
}
sub {
  bottom: -0.25em;
}
sub,
sup {
  font-size: 85%;
  line-height: 0;
  position: relative;
  vertical-align: baseline;
}

/* indicate current page */

[aria-current]:not([aria-current="false"]) {
  font-weight: 500;
}

/*footer*/

.copyright {
    margin: 15px 0;
}


/*apply accent colour to links*/

a:link, a:visited {
    color: var(--accent);
}

a.icon:hover {
    text-decoration: none;
}

a:hover {
    color: var(--accent) !important;
}

/*paginator at bottom of list view*/

.pages {
    padding: 15px 0;
}

.pages-icon {
    padding: 0 15px;
}

/*list item for posts and projects*/

.item {
    padding: 10px 0;
}

.item-tag {
    background-color: var(--accent);
}

/*navigation bar icons*/

.navbar-icon {
    font-size: 125%;
    display: inline-block !important;
}

/* big */
@media (min-width: 768px) {
  .expandable-content-xs[data-expanded="false"] {
    height: auto !important;
  }
}

/* small */
@media (max-width: 767px) {
  /* content made initially 'invisible' (height 0) on eXtra-Small width screens*/
  .expandable-content-xs {
     overflow: hidden;
     height:auto;
     z-index: 900;
     transition: height 0.3s ease-out;
  }

  .expandable-content-xs[data-expanded="false"] {
    height: 0;
  }
  .expandable-content-xs[data-expanded="true"] {
    height: auto;
  }
} /*end media */


.single-content {
    hyphens: auto;
}

footer {
    border-bottom: var(--border-width) solid var(--accent);
}

img {
    max-width: 100%;
}

/* copyright and licensing */
.text-muted {
  font-size: small;
}


/*commento customization*/

.commento-submit-button {
  background: var(--accent) !important;
  line-height: 3px !important;
}

.commento-root-font * {
    font-family: 'Raleway', sans-serif !important;
}

#commento-markdown-help-root {
  line-height: 2.5 !important;
}

