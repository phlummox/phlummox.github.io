html, body {
    height: 100%;
}

body {
  margin: 0;
  padding-top:    55px;
  display:        flex;
  text-align:     center;
  flex-direction: column;
  color:          #000;
}

main {
  padding: 25px;
  flex: 1 0 auto;
  max-width: 750px;
  position: relative;
  left: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateX(-50%);
  line-height:    1.4;
}

